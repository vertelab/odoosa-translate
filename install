#!/bin/bash
################################################################################
#                                                                              #
#   Installation of Translation tools                                          #
#                                                                              #
#                                                                              #
#                                                                              #
################################################################################

sudo -H pip3 install --break-system-packages -r <(wget -qO- https://raw.githubusercontent.com/vertelab/weblatetools/refs/heads/main/requirements.txt)


sudo wget -O /usr/local/bin/odooposync https://raw.githubusercontent.com/vertelab/odoosa-translate/refs/heads/main/odooposync.py
sudo chown root:root /usr/local/bin/odooposync
sudo chmod +x /usr/local/bin/odooposync
sudo wget -O /usr/local/bin/odoopodiff https://raw.githubusercontent.com/vertelab/odoosa-translate/refs/heads/main/odoopodiff.py
sudo chown root:root /usr/local/bin/odoopodiff
sudo chmod +x /usr/local/bin/odoopodiff
